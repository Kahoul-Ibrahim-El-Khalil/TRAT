{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 19
	},
	"configurePresets": [
		{
			"name": "release",
			"displayName": "Release",
			"description": "Optimized release build for any platform.",
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/release/${hostSystemName}",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_CXX_FLAGS": "-O3",
				"DEBUG": "OFF"
			}
		},
		{
			"name": "debug",
			"displayName": "Debug",
			"description": "Debug build with all modules logging.",
			"generator": "Ninja",
			"binaryDir": "${sourceDir}/build/debug/${hostSystemName}",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_CXX_FLAGS": "-Wall -Werror -Wpedantic -g -O0",
				"DEBUG": "ON"
			}
		}
	]
}
